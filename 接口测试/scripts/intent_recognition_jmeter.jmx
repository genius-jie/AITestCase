            <stringProp name="filename"></stringProp>
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="script">import groovy.json.JsonSlurper

String expectedStatus = vars.get(&quot;expected_status&quot;)

// 仅在预期状态码为200时执行详细的业务字段校验
if (expectedStatus.equals(&quot;200&quot;)) {
    try {
        def response = prev.getResponseDataAsString()
        def json = new JsonSlurper().parseText(response)
        
        String expectedLabel = vars.get(&quot;expected_label&quot;)
        String expectedEmotion = vars.get(&quot;expected_emotion&quot;)
        
        // 1. 校验 Label (Intent)
        // 实际响应中没有 modality 字段，直接校验 label
        if (json.label != expectedLabel) {
            AssertionResult.setFailure(true)
            AssertionResult.setFailureMessage(&quot;Label mismatch. Expected: &quot; + expectedLabel + &quot;, Actual: &quot; + json.label)
            return
        }
        
        // 2. 校验 emotion 字段
        if (json.emotion != expectedEmotion) {
            AssertionResult.setFailure(true)
            AssertionResult.setFailureMessage(&quot;Emotion mismatch. Expected: &quot; + expectedEmotion + &quot;, Actual: &quot; + json.emotion)
            return
        }
        
    } catch (Exception e) {
        AssertionResult.setFailure(true)
        AssertionResult.setFailureMessage(&quot;JSON Parsing Error: &quot; + e.getMessage())
    }
}
</stringProp>
